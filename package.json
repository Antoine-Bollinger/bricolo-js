{
    "name": "bricolo",
    "author": "Antoine Bollinger",
    "version": "1.5.1",
    "license": "ISC",
    "description": "A development tool for running PHP, JS, and Sass in parallel.",
    "keywords": [
        "php-serve",
        "live-reload",
        "sass",
        "typescript",
        "esbuild",
        "browser-sync",
        "development-environment",
        "file-watching",
        "build-tool",
        "js-build",
        "css-build"
    ],
    "main": "./bin/index",
    "bin": {
        "bricolo": "./bin/bricolo"
    },
    "files": [
        "bin",
        "lib",
        "config.json",
        "README.md"
    ],
    "dependencies": {
        "browser-sync": "^3.0.3",
        "concurrently": "^9.0.1",
        "esbuild": "^0.24.0",
        "prompt": "^1.3.0",
        "sass": "^1.79.5",
        "typescript": "^5.6.3",
        "wait-on": "^8.0.1"
    },
    "scripts": {
        "serve": "node ./lib/serve",
        "initiate": "node ./lib/initiate",
        "postinstall": "node ./lib/initiate",
        "help": "node ./lib/help"
    }
}